<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xác thực</title>
    <%- include('../../partials/header.ejs') %>
  </head>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="signup-form">
            <form
              method="POST"
              action="/auth/verify"
              class="mt-5 border p-4 bg-white shadow"
            >
              <h4 class="mb-5 text-secondary text-center">
                Xác thực tài khoản
              </h4>
              <div class="row">
                <div class="mb-3 col-md-12">
                  <label>Nhập OTP<span class="text-danger">*</span></label>
                  <input type="text" name="otp" class="form-control" required />
                </div>
                <% if(typeof msg !== "undefined"){ %>
                <div class="mb-3 col-md-12">
                  <div class="badge bg-danger text-wrap" style="width: 100%">
                    <%= msg %>
                  </div>
                </div>
                <% } %>

                <div class="col-md-12">
                  <button class="btn btn-primary">Xác thực</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
